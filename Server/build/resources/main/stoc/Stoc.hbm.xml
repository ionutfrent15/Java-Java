<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Stoc" table="Stoc">
        <!--<composite-id>-->
            <!--<key-many-to-one name="produs" column="idProdus" class="model.Produs">-->
            <!--</key-many-to-one>-->
